<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:layout_margin="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


           <cn.carbs.android.avatarimageview.library.AvatarImageView
               android:layout_width="28dp"
               android:layout_height="28dp"
               app:aiv_ShowBoarder="true"
               app:aiv_BoarderWidth="2dp"
               app:aiv_BoarderColor="#757575"
               android:src="@drawable/tablet"/>


            <TextView
                android:id="@+id/myName"
                android:text="Medicine Name: "
                android:textSize="20sp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/myMedicineName"
                android:text="Paracetamol 500"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:padding="4dp"
            android:background="@drawable/border"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myMedicineTimesADay"
                android:layout_width="wrap_content"
                android:text="2"
                android:textStyle="italic"
                android:textSize="18sp"

                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/myTimesADay"
                android:layout_width="match_parent"
                android:text=" times a day."
                android:textSize="18sp"
                android:textStyle="italic"
                android:layout_height="wrap_content"
                />

        </LinearLayout>


           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginLeft="40dp"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/myFromDate"
                   android:layout_width="match_parent"
                   android:text="From : "
                   android:textSize="18sp"
                   android:layout_height="wrap_content"
                   />

               <TextView
                   android:id="@+id/myMedicineFromDate"
                   android:layout_width="match_parent"
                   android:text="27/072017"
                   android:textStyle="bold"
                   android:textSize="18sp"
                   android:layout_height="wrap_content"
                   />


               <TextView
                   android:id="@+id/myTillDate"
                   android:layout_width="match_parent"
                   android:text="  To : "
                   android:textSize="18sp"
                   android:layout_height="wrap_content"
                   />
               <TextView
                   android:id="@+id/myMedicineTillDate"
                   android:layout_width="match_parent"
                   android:text="30/072017"
                   android:textStyle="bold"
                   android:textSize="18sp"
                   android:layout_height="wrap_content"
                   />


           </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/myDoctorId"
            android:layout_width="match_parent"
            android:text="Doctor ID : "
            android:textSize="18sp"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/myMedicineDoctorId"
            android:layout_width="match_parent"
            android:text="lfnvjn"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            />


    </LinearLayout>




        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>